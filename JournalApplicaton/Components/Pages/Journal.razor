@page "/journal"
@using JournalApplicaton.Model
@using JournalApplicaton.Services
@inject IJournalService JournalService
@inject UserSessionService Session
@inject NavigationManager Nav

<div class="container py-4">

    <div class="d-flex justify-content-between align-items-center mb-4">
        <h3>📓 My Journals</h3>
        <a class="btn btn-success" href="/journal/edit">
            + Write Today
        </a>
    </div>

    <!-- 🔍 FILTER BAR -->
    <div class="card shadow-sm mb-4">
        <div class="card-body">
            <div class="row g-3 align-items-end">

                <div class="col-md-4">
                    <label class="form-label">Search</label>
                    <input class="form-control"
                           placeholder="Title, mood, tags..."
                           @bind="searchText" />
                </div>

                <div class="col-md-3">
                    <label class="form-label">From</label>
                    <input type="date"
                           class="form-control"
                           @bind="fromDate" />
                </div>

                <div class="col-md-3">
                    <label class="form-label">To</label>
                    <input type="date"
                           class="form-control"
                           @bind="toDate" />
                </div>

                <div class="col-md-2 d-grid">
                    <button class="btn btn-primary"
                            @onclick="ApplyFilters">
                        Apply
                    </button>
                </div>

            </div>
        </div>
    </div>

    <!-- 📊 TABLE -->
    <div class="card shadow-sm">
        <div class="card-body p-0">
            <table class="table table-hover align-middle mb-0">
                <thead class="table-light">
                    <tr>
                        <th>Date</th>
                        <th>Title</th>
                        <th>Mood</th>
                        <th>Words</th>
                        <th class="text-center" style="width:220px">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @if (!journals.Any())
                    {
                        <tr>
                            <td colspan="5" class="text-center text-muted py-4">
                                No journals found
                            </td>
                        </tr>
                    }
                    else
                    {
                        @foreach (var j in journals)
                        {
                            <tr>
                                <td>@j.EntryDate.ToString("dd MMM yyyy")</td>
                                <td>@j.Title</td>
                                <td>
                                    <span class="badge bg-info">
                                        @j.PrimaryMood
                                    </span>
                                </td>
                                <td>@j.WordCount</td>
                                <td class="text-center">
                                    <div class="btn-group btn-group-sm">

                                        <a class="btn btn-outline-primary"
                                           href="/journal/view/@j.EntryDate.ToString("yyyy-MM-dd")">
                                            View
                                        </a>

                                        <a class="btn btn-outline-warning"
                                           href="/journal/edit/@j.EntryDate.ToString("yyyy-MM-dd")">
                                            Edit
                                        </a>

                                        <button class="btn btn-outline-danger"
                                                @onclick="() => ConfirmDelete(j.EntryDate)">
                                            Delete
                                        </button>

                                    </div>
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>

    <!-- 🔢 PAGINATION + PDF EXPORT -->
    <div class="d-flex justify-content-between align-items-center mt-4">

        <!-- LEFT: Pagination -->
        <nav>
            <ul class="pagination mb-0">
                <li class="page-item @(currentPage == 1 ? "disabled" : "")">
                    <button class="page-link"
                            @onclick="() => ChangePage(currentPage - 1)">
                        Previous
                    </button>
                </li>

                <li class="page-item active">
                    <span class="page-link">@currentPage</span>
                </li>

                <li class="page-item @(journals.Count < pageSize ? "disabled" : "")">
                    <button class="page-link"
                            @onclick="() => ChangePage(currentPage + 1)">
                        Next
                    </button>
                </li>
            </ul>
        </nav>

        <!-- RIGHT: PDF Export -->
        <div class="d-flex gap-2 align-items-end">
            <div>
                <label class="form-label mb-1">Start Date</label>
                <input type="date" class="form-control" @bind="pdfFromDate" />
            </div>

            <div>
                <label class="form-label mb-1">End Date</label>
                <input type="date" class="form-control" @bind="pdfToDate" />
            </div>

            <button class="btn btn-danger"
                    @onclick="GeneratePdf"
                    disabled="@(!pdfFromDate.HasValue || !pdfToDate.HasValue)">
                📄 Generate PDF
            </button>
        </div>
    </div>
</div>

@code {

    List<JournalDisplayModel> journals = new();

    string searchText = "";
    DateTime? fromDate;
    DateTime? toDate;

    int currentPage = 1;
    int pageSize = 8;

    protected override async Task OnInitializedAsync()
    {
        if (Session.CurrentUser == null)
        {
            Nav.NavigateTo("/login");
            return;
        }

        await LoadJournals();
    }

    private async Task LoadJournals()
    {
        var (list, _) =
            await JournalService.SearchJournalsAsync(
                Session.CurrentUser!.UserId,
                searchText,
                fromDate,
                toDate,
                currentPage,
                pageSize);

        journals = list;
    }

    private async Task ApplyFilters()
    {
        currentPage = 1;
        await LoadJournals();
    }

    private async Task ChangePage(int newPage)
    {
        if (newPage < 1) return;

        currentPage = newPage;
        await LoadJournals();
    }

    private async Task ConfirmDelete(DateTime date)
    {
        if (!await JSRuntime.InvokeAsync<bool>(
            "confirm", "Are you sure you want to delete this journal?"))
            return;

        await JournalService.DeleteJournalAsync(
            Session.CurrentUser!.UserId,
            date);

        await LoadJournals();
    }

    DateTime? pdfFromDate;
    DateTime? pdfToDate;

    private async Task GeneratePdf()
    {
        if (!pdfFromDate.HasValue || !pdfToDate.HasValue)
            return;

        var bytes = await JournalService.GenerateJournalPdfAsync(
            Session.CurrentUser!.UserId,
            pdfFromDate.Value,
            pdfToDate.Value
        );

        var base64 = Convert.ToBase64String(bytes);

        await JSRuntime.InvokeVoidAsync(
            "downloadFileFromBase64",
            $"journals_{pdfFromDate:yyyyMMdd}_{pdfToDate:yyyyMMdd}.pdf",
            base64
        );
    }


    [Inject] IJSRuntime JSRuntime { get; set; } = default!;
}

<script>
        window.downloadFileFromBase64 = (fileName, base64) => {
        const link = document.createElement("a");
        link.href = "data:application/pdf;base64," + base64;
        link.download = fileName;
        link.click();
    };
</script>
