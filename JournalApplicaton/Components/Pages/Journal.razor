@page "/journals"
@layout MainLayout
@using JournalApplicaton.Model
@using JournalApplicaton.Services
@inject IJournalService JournalService
@inject UserSessionService Session
@inject NavigationManager Nav
@inject IJSRuntime JSRuntime

<div class="container py-4">

    <div class="d-flex justify-content-between align-items-center mb-4">
        <h3>📓 My Journals</h3>
        <a class="btn btn-success" href="/journal/edit">
            + Write Today
        </a>
    </div>

    <!-- 🔍 FILTER BAR -->
    <div class="card shadow-sm mb-4">
        <div class="card-body">
            <div class="row g-3 align-items-end">

                <!-- TITLE -->
                <div class="col-md-3">
                    <label class="form-label">Title</label>
                    <input class="form-control"
                           placeholder="Search by title"
                           @bind="TitleSearch" />
                </div>

                <!-- MOOD -->
                <div class="col-md-2">
                    <label class="form-label">Mood</label>
                    <select class="form-select" @bind="SelectedMood">
                        <option value="">All</option>
                        <option>Positive</option>
                        <option>Neutral</option>
                        <option>Negative</option>
                    </select>
                </div>

                <!-- TAG -->
                <div class="col-md-2">
                    <label class="form-label">Tag</label>
                    <input class="form-control"
                           placeholder="e.g. work, life"
                           @bind="TagSearch" />
                </div>

                <!-- FROM -->
                <div class="col-md-2">
                    <label class="form-label">From</label>
                    <input type="date" class="form-control" @bind="fromDate" />
                </div>

                <!-- TO -->
                <div class="col-md-2">
                    <label class="form-label">To</label>
                    <input type="date" class="form-control" @bind="toDate" />
                </div>

                <!-- APPLY -->
                <div class="col-md-1 d-grid">
                    <button class="btn btn-primary" @onclick="ApplyFilters">
                        Apply
                    </button>
                </div>

            </div>
        </div>
    </div>

    <!-- 📊 TABLE -->
    <div class="card shadow-sm">
        <div class="card-body p-0">
            <table class="table table-hover align-middle mb-0">
                <thead class="table-light">
                    <tr>
                        <th>Date</th>
                        <th>Title</th>
                        <th>Mood</th>
                        <th>Words</th>
                        <th class="text-center" style="width:220px">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @if (!journals.Any())
                    {
                        <tr>
                            <td colspan="5" class="text-center text-muted py-4">
                                No journals found
                            </td>
                        </tr>
                    }
                    else
                    {
                        @foreach (var j in journals)
                        {
                            <tr>
                                <td>@j.EntryDate.ToString("dd MMM yyyy")</td>
                                <td>@j.Title</td>
                                <td>
                                    <span class="badge bg-info">
                                        @j.PrimaryMood
                                    </span>
                                </td>
                                <td>@j.WordCount</td>
                                <td class="text-center">
                                    <div class="d-flex justify-content-center gap-1">
                                        <!-- VIEW BUTTON -->
                                        <a class="btn btn-sm btn-outline-primary"
                                           title="View Journal"
                                           href="/journal/view/@j.EntryDate.ToString("yyyy-MM-dd")">
                                            <i class="bi bi-eye"></i> View
                                        </a>

                                        <!-- EDIT BUTTON -->
                                        <a class="btn btn-sm btn-outline-warning"
                                           title="Edit Journal"
                                           href="/journal/edit/@j.EntryDate.ToString("yyyy-MM-dd")">
                                            <i class="bi bi-pencil"></i> Edit
                                        </a>

                                        <!-- DELETE BUTTON -->
                                        <button class="btn btn-sm btn-outline-danger"
                                                title="Delete Journal"
                                                @onclick="() => ConfirmDelete(j.EntryDate)">
                                            <i class="bi bi-trash"></i> Delete
                                        </button>
                                    </div>
                                </td>

                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>

    <!-- 🔢 PAGINATION + PDF -->
    <div class="d-flex justify-content-between align-items-center mt-4">

        <!-- PAGINATION -->
        <nav>
            <ul class="pagination mb-0">
                <li class="page-item @(currentPage == 1 ? "disabled" : "")">
                    <button class="page-link"
                            @onclick="() => ChangePage(currentPage - 1)">
                        Previous
                    </button>
                </li>

                <li class="page-item active">
                    <span class="page-link">@currentPage</span>
                </li>

                <li class="page-item @(journals.Count < pageSize ? "disabled" : "")">
                    <button class="page-link"
                            @onclick="() => ChangePage(currentPage + 1)">
                        Next
                    </button>
                </li>
            </ul>
        </nav>

        <!-- PDF EXPORT -->
        <div class="d-flex gap-2 align-items-end">
            <div>
                <label class="form-label mb-1">Start Date</label>
                <input type="date" class="form-control" @bind="pdfFromDate" />
            </div>

            <div>
                <label class="form-label mb-1">End Date</label>
                <input type="date" class="form-control" @bind="pdfToDate" />
            </div>

            <button class="btn btn-danger"
                    @onclick="GeneratePdf"
                    disabled="@(!pdfFromDate.HasValue || !pdfToDate.HasValue)">
                📄 Generate PDF
            </button>
        </div>
    </div>
</div>

@code {

    List<JournalDisplayModel> journals = new();

    // 🔁 one-filter-at-a-time logic
    private string _titleSearch = "";
    private string _selectedMood = "";
    private string _tagSearch = "";

    string TitleSearch
    {
        get => _titleSearch;
        set
        {
            _titleSearch = value;
            if (!string.IsNullOrWhiteSpace(value))
            {
                _selectedMood = "";
                _tagSearch = "";
            }
        }
    }

    string SelectedMood
    {
        get => _selectedMood;
        set
        {
            _selectedMood = value;
            if (!string.IsNullOrWhiteSpace(value))
            {
                _titleSearch = "";
                _tagSearch = "";
            }
        }
    }

    string TagSearch
    {
        get => _tagSearch;
        set
        {
            _tagSearch = value;
            if (!string.IsNullOrWhiteSpace(value))
            {
                _titleSearch = "";
                _selectedMood = "";
            }
        }
    }

    DateTime? fromDate;
    DateTime? toDate;

    int currentPage = 1;
    int pageSize = 8;

    DateTime? pdfFromDate;
    DateTime? pdfToDate;

    protected override async Task OnInitializedAsync()
    {
        if (Session.CurrentUser == null)
        {
            Nav.NavigateTo("/login");
            return;
        }

        await LoadJournals();
    }

    private async Task LoadJournals()
    {
        (List<JournalDisplayModel> list, int _) =
            await JournalService.SearchJournalsAsync(
                Session.CurrentUser!.UserId,
                TitleSearch,
                SelectedMood,
                TagSearch,
                fromDate,
                toDate,
                currentPage,
                pageSize);

        journals = list;
    }

    private async Task ApplyFilters()
    {
        currentPage = 1;
        await LoadJournals();
    }

    private async Task ChangePage(int newPage)
    {
        if (newPage < 1) return;
        currentPage = newPage;
        await LoadJournals();
    }

    private async Task ConfirmDelete(DateTime date)
    {
        bool confirm = await JSRuntime.InvokeAsync<bool>(
            "confirm", "Are you sure you want to delete this journal?");

        if (!confirm) return;

        await JournalService.DeleteJournalAsync(
            Session.CurrentUser!.UserId, date);

        await LoadJournals();
    }

    private async Task GeneratePdf()
    {
        if (!pdfFromDate.HasValue || !pdfToDate.HasValue)
            return;

        var bytes = await JournalService.GenerateJournalPdfAsync(
            Session.CurrentUser!.UserId,
            pdfFromDate.Value,
            pdfToDate.Value);

        var base64 = Convert.ToBase64String(bytes);

        await JSRuntime.InvokeVoidAsync(
            "downloadFileFromBase64",
            $"journals_{pdfFromDate:yyyyMMdd}_{pdfToDate:yyyyMMdd}.pdf",
            base64);
    }
}

<script>
    window.downloadFileFromBase64 = (fileName, base64) => {
        const link = document.createElement("a");
        link.href = "data:application/pdf;base64," + base64;
        link.download = fileName;
        link.click();
    };
</script>
